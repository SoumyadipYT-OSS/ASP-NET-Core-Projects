@model StudentPortal.Models.Student
@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background: linear-gradient(to right, #4e54c8, #8f94fb);
        color: white;
    }
    .btn {
        margin-right: 5px;
    }
    .row {
        margin-bottom: 10px;
    }
</style>

<div class="container mt-5">
    <h1 class="display-4">Delete Student</h1>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RegdNo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RegdNo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Course)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Course)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Specilization)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Specilization)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PhNo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhNo)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
