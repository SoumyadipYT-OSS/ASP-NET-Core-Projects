                <span asp-validation-for="Specilization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhNo" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <select class="form-control" style="width: 100px;">
                            @foreach (var code in countryCodes)
                            {
                                <option value="@code.Value">@code.Text</option>
                            }
                        </select>
                    </div>
                    <input asp-for="PhNo" class="form-control" />
                </div>
                <span asp-validation-for="PhNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-2" />
            </div>
